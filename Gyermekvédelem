import hashlib
from modules.logger import log_event

# Csak a 197807 k√≥d hash-elve van enged√©lyezve
AUTHORIZED_HASHES = {
    hashlib.sha256(b"197807").hexdigest()
}

def override_block(code, content, source="admin"):
    code_hash = hashlib.sha256(code.encode()).hexdigest()
    if code_hash in AUTHORIZED_HASHES:
        log_event("OVERRIDE", content, source)
        return True
    else:
        log_event("FAILED_OVERRIDE", content, source)
        return False


vdelem = ParentalControl(language="hu")

