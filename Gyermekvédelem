def load_keywords(language="hu"):
    with open(f"config/keywords_{language}.txt", "r", encoding="utf-8") as f:
        return [line.strip().lower() for line in f if line.strip()]

def is_inappropriate(text, keywords):
    return any(word in text.lower() for word in keywords)





def log_event(status, content, source="unknown"):
    timestamp = datetime.now().isoformat()
    with open("logs/events.log", "a", encoding="utf-8") as f:
        f.write(f"[{timestamp}] {status} | {source} | {content}\n")



from modules.filter import load_keywords, is_inappropriate
from modules.logger import log_event

class ParentalControl:
    def __init__(self, language="hu"):
        self.keywords = load_keywords(language)

    def check_text(self, text, source="input"):
        if is_inappropriate(text, self.keywords):
            log_event("BLOCKED", text, source)
            return False
        log_event("ALLOWED", text, source)
        return True
